        <ul class="navbar second">
            <% if(locals.profile) { %>
            <li class="li"><b>
                <% if(locals.file == "") { %>
                    <img style="width: 34px; height: 34px; margin-top: 5px; border-radius: 999px;" onclick="window.open('/profile', '_self')" src="svg/profile-circle-svgrepo-com.svg" alt="Profile">
