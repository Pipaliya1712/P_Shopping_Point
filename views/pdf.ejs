  <!-- <form class="hide-on-pdf" style="text-align: center;" action="bill" method="post"><button name="itam" value="<%= locals.placedItam[0]._id %>" class="bill_btn">Download</button></form> -->
  <div id="lol" style="margin: 20px 40px; font-size: 20px; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <div style="margin: 50px 0;">
      <div style="float: left;">
          <div><b>Transaction id:</b> <%= locals.placedItam[0]._id %></div>
          <div><b>Date and Time:</b> <%=locals.placedItam[0].date.getDate()%>-<%=(locals.placedItam[0].date.getMonth() + 1) %>-<%=locals.placedItam[0].date.getFullYear()%>  <%=locals.placedItam[0].date.getHours() %>:<%=locals.placedItam[0].date.getMinutes()%>:<%=locals.placedItam[0].date.getSeconds()%></div>
      </div>
      <div style="float: right;">
          <img style="height: 55px;" src="Photo/Screenshot%202023-10-22%20092706.png" alt="jk">
      </div>
      <div style="clear: both;"></div>
    </div>
    <div style="border-top: 3px solid #998780;"></div>
    <div style="margin: 20px 0;">
      <span style="display: inline-block; width: 49%;">
          <span style="margin-bottom: 10px;"><b>Customer Details: </b></span><br>
          <span><%= locals.name %></span><br>
          <span><%= locals.phone %></span><br>
          <span><%= locals.email %></span><br>
      </span>
      <span style="display: inline-block; width: 40%;">
          <span style="margin-bottom: 10px;"><b>Receiver Details: </b></span><br>
          <span><%=locals.placedItam[0].fname%> <%=locals.placedItam[0].lname%></span><br>
          <span><%=locals.placedItam[0].phone%></span><br>
          <span><%=locals.placedItam[0].email%></span><br>
      </span>
    </div>
    <div style="border-top: 3px solid #998780;"></div>
    <div>
      <table style="row-gap: 20px; width: 100%;margin-top: 15px;margin-bottom: 20px;text-align: center;border-collapse: collapse;">
        <thead>
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Rate</th>
            <th>Tax</th>
            <th>Amount</th>
          </tr>
          <tr>
            <td><div style="height: 20px;"></div></td>
          </tr>
          <tr>
            <td colspan="5" style="border-bottom: 3px solid #998780;"></td>
          </tr>
        </thead>
        <% let sum = 0 %>
        <tbody>
          <% for(let i=0;i < locals.placedItam[0].product.length;i++) { %>
          <tr>
            <td><div style="height: 20px;"></div></td>
          </tr>
          <tr>
            <td>
              <% if(locals.placedItam[0].product[i].gender) {%>
                Men
              <% } else { %>
                Women
              <%}%> 
            </td>
            <td><%= locals.placedItam[0].product[i].quantity %></td>
            <td>$<%= locals.placedItam[0].product[i].prize %>.00</td>
            <td>$00.00</td>
            <td>$<%= locals.placedItam[0].product[i].prize  * locals.placedItam[0].product[i].quantity %>.00</td>
            <% sum += (locals.placedItam[0].product[i].prize  * locals.placedItam[0].product[i].quantity)%>
          </tr>
          <tr>
            <td><div style="height: 20px;"></div></td>
          </tr>
          <%}%>
          <tr>
            <td colspan="5"><hr></td>
          </tr>
          <tr>
            <td><div style="height: 20px;"></div></td>
          </tr>
          <tr>
            <td style="text-align: right;" colspan="4">Subtotal:</td>
            <td>$<%= sum %>.00</td>
          </tr>
          <tr>
            <td style="text-align: right;" colspan="4">Discount:</td>
            <td>$00.00</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div style="border-top: 3px solid #998780;"></div>
    <div style="text-align: right;">
      <div style="margin: 20px 100px 0 0; display: inline-block; padding: 20px 50px; background-color: #998780; font-weight: bold; color: white;">
          <span style="margin-right:50px;">Total</span>
          <span>$<%= sum %>.00</span>
      </div>
    </div>
    <div style="text-align: center; margin-top:15px;">
      Thank you for shopping : )
    </div>
    <div style="text-align: right;">
      <div style="display: inline-block; padding: 20px 50px;">
        <img width="90px" src="https://i.imgur.com/b3RI6IV.png" alt="sign">
          <div style="text-align: center;">Seller sign</div>
      </div>
    </div>  
    <hr>
    <div style="text-align: center; font-size: 15px;">
      <div>SP Boys hostel, Gulbai takra, EllisBridge, Ahmedabad - 3600001</div>
      <div>+91-7383-274-687, pshoppingpoint@pshoppingpoint.com</div>
    </div>
