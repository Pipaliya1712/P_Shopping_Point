            <% } else { %>
            <li class="li"><b>
                <form method="post" action="/logout">
                    <button type="submit" class="logout"><%= locals.action %></button>
                </form>
            </b></li>
            <% } %>
        </ul>
    </nav>
    <nav class="snavbar">
        <ul class="center_logo"><a href="/"><img class="logo" src="https://i.imgur.com/aiWlS3g.png alt="P SHOPPING POINT" srcset=""></a></ul>
